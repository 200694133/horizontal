<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/put_body"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content" />
             <Button
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:onClick="put"
                 android:textSize="12dp"
                 android:layout_weight="1"
                 android:text="添加"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/trim_size"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="number"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="trimSize"
                android:textSize="12dp"
                android:layout_weight="1"
                android:text="TrimSize"/>

            <EditText
                android:id="@+id/trim_count"
                android:layout_width="0dp"
                android:inputType="number"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="trimCount"
                android:textSize="12dp"
                android:layout_weight="1"
                android:text="TrimCount"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="getAll"
                android:textSize="12dp"
                android:layout_weight="1"
                android:text="GetAll"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="clear"
                android:layout_weight="1"
                android:textSize="12dp"
                android:text="Clear"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="getPage"
                android:layout_weight="1"
                android:textSize="12dp"
                android:text="GetPage"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="getSize"
                android:textSize="12dp"
                android:layout_weight="1"
                android:text="GetSize"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="getCount"
                android:layout_weight="1"
                android:textSize="12dp"
                android:text="GetCount"/>
        </LinearLayout>
    </LinearLayout>
    
    <TextView
        android:id="@+id/result"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@id/result"
        android:layout_below="@id/con">
        <ListView
            android:layout_weight="1"
            android:id="@+id/listview1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <ListView
            android:layout_weight="1"
            android:id="@+id/listview2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        </LinearLayout>
</RelativeLayout>